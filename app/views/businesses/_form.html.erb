<%= form_for(@business) do |f| %>
  <% if @business.errors.any? %>
    <div id="error_explanation" class="alert-message block-message error">
      <h2><%= pluralize(@business.errors.count, "error") %> prohibited this business from being saved:</h2>

      <ul>
      <% @business.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :address %>
    <div class="input">
      <%= f.text_field :address %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :description %>
    <div class="input">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :tag_list, "Tags" %>
    <div class="input">
      <%= f.text_field :tag_list %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :website %>
    <div class="input">
      <%= f.text_field :website %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :twitter %>
    <div class="input">
      <div class="input-prepend">
        <span class="add-on">@</span>
        <%= f.text_field :twitter %>
      </div>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn primary" %>
  </div>
<% end %>
