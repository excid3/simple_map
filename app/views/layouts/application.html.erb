<!DOCTYPE html>
<html>
<head>
  <title>Maplouis</title>

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <%= stylesheet_link_tag    "http://twitter.github.com/bootstrap/1.3.0/bootstrap.css", "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="topbar">
    <div class="fill">
      <div class="container">
        <a class="brand" href="<%= root_path %>">Start Louis Map</a>
        <ul class="nav">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "All Businesses", businesses_path %></li>
          <li><%= link_to "Add Yours", new_business_path %></li>
        </ul>
        <p class="pull-right">
        <% if user_signed_in? %>
          <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
        <% else %>
          <%= link_to "Login", new_user_session_path %>
          or
          <%= link_to "Sign Up", new_user_registration_path %>
        <% end %>
        </p>
      </div>
    </div>
  </div>


  <div class="container">

    <% if notice %><div class="alert-message info"><%= notice %></div><% end %>
    <% if alert %><div class="alert-message error"><%= alert %></div><% end %>

    <%= yield %>

  </div>

  <%= yield :scripts %>

</body>
</html>
